{
  "name": "markdown-viewer",
  "version": "0.1.0",
  "main": "main.js",
  "description": "A simple desktop markdown viewer",
  "repository": "znewton/markdown-viewer",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "lint": "eslint",
    "prettier": "prettier **/*.js **/*.css",
    "prettier-write": "prettier --write **/*.js **/*.css",
    "pack": "electron-builder -l --dir",
    "dist": "electron-builder -l",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "znewton.mdviewer",
    "productName": "mdv"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "eslint": "^5.13.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "highlight.js": "^9.14.2",
    "jsdom": "^13.2.0",
    "marked": "^0.6.0"
  }
}
